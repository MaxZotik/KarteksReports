<Window x:Class="KarteksReport.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KarteksReport.App" 
        mc:Ignorable="d"
        Title="КАРТЭКС ОТЧЕТ" Height="160" Width="700" 
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="CanMinimize"
        WindowStyle="ToolWindow">
    <Grid>
        <StackPanel>
            <Grid>
                <ProgressBar x:Name="pBar" Maximum="10" Value="0" Height="50" Margin="10 10 10 0" Grid.ColumnSpan="3"/>
                <TextBlock x:Name="txtBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Height="24" Margin="5 10 0 0" FontSize="18" Text=""/>
            </Grid>
            <Button x:Name="btnClose" Width="100" Height="30" Content="Закрыть" Margin="0 15 0 0" FontSize="18" Click="btn_Close" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
